<section class="ma__guide-section">
  <h2 class="ma__guide-section__title"><a name="{{guideSection.id}}" id="{{guideSection.id}}">{{guideSection.title}}</a></h2>
</section> 
<div class="main-content {{ guideSection.sideBar|length != 'single' ? 'main-content--two' : '' }}">
  <main class="page-content">
    {% for content in guideSection.pageContent %}
      {% include content.path with content.data %}
    {% endfor %}
  </main>
  {% if guideSection.sideBar|length %} 
    <aside class="sidebar">
      {% for sidebar in guideSection.sideBar %}
        {% include sidebar.path with sidebar.data %}
      {% endfor %}
    </aside>
  {% endif %}
</div>
