{% extends 'node.html.twig' %}

{% block preContent %}
  {#{% include "@organisms/by-template/breadcrumbs.twig" %}#}
  {% include "@organisms/by-template/page-header.twig" %}
{% endblock %}

{% block main %}
    <div class="main-content main-content--two">
      <div class="page-content">
        {% if sidebar.contactList %}
          <div class="ma__details__top-contact">
            {% set contactList = sidebar.contactList %}
            {% include "@organisms/by-author/contact-list.twig" %}
          </div>
        {% endif %}
        {% set coloredHeading = {
            "text": details.contentTitle,
            "color": "green"
          } %}
        {% include "@atoms/04-headings/colored-heading.twig" %}
        <div class="ma__details__content">
          {% include "@molecules/sticky-nav.twig" %}
          {% block pageContent %}
            {% if pageContent.intro %}
              {% set richText = pageContent.intro %}
              {% include "@organisms/by-author/rich-text.twig" %}
            {% endif %}
            {% if pageContent.tabularData %}
              {% set tabularData = pageContent.tabularData %}
              {% include "@organisms/by-author/tabular-data.twig" %}
            {% endif %}
            {% if pageContent.stepsUnordered %}
              {% set stepsUnordered = pageContent.stepsUnordered %}
              {% include "@organisms/by-author/steps-unordered.twig" %}
            {% endif %}
            {% if pageContent.stepsOrdered %}
              {% set stepsOrdered = pageContent.stepsOrdered %}
              {% include "@organisms/by-author/steps-ordered.twig" %}
            {% endif %}
            {% if pageContent.moreInfo %}
              {% set richText = pageContent.moreInfo %}
              {% include "@organisms/by-author/rich-text.twig" %}
            {% endif %}
            {% if pageContent.formDownloads %}
              {% set formDownloads = pageContent.formDownloads %}
              {% include "@organisms/by-author/form-downloads.twig" %}
            {% endif %}
            {% if pageContent.contactList %}
              {% set contactList = pageContent.contactList %}
              {% include "@organisms/by-author/contact-list.twig" %}
            {% endif %}
          {% endblock %}
        </div>
      </div>

      <aside class="sidebar">
        {% if sidebar.contactList %}
          <div class="ma__details__sidebar-contact">
            {% set contactList = sidebar.contactList %}
            {% include "@organisms/by-author/contact-list.twig" %}
          </div>
        {% endif %}
        {% if sidebar %}
          <div class="ma__details__sidebar">
            {% block sidebar %}
              {% if sidebar.linkList %}
                {% set linkList = sidebar.linkList %}
                {% include "@organisms/by-author/link-list.twig" %}
              {% endif %}
            {% endblock %}
          </div>
        {% endif %}
      </aside>
    </div>
{% endblock %}
