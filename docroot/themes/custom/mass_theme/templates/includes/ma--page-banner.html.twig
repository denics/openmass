<section class="ma__page-banner {{ bannerData.class }}">
  <style>
    .ma__page-banner {
      background-image: url('{{ hero800x400_image_url }}'); /* 800x400 using Hero800x400 image style. */
    }

    @media (min-width: 801px) {
      .ma__page-banner {
	background-image: url('{{ file_url(node.field_featured_image.entity.fileuri) }}'); /* Default uploaded image. */
      }
    }
  </style>
  <div class="ma__page-banner__container">
    <div class="ma__page-banner__content">
      <div class="ma__page-banner__icon">
	{% include '@atoms/05-icons/svg-restore.twig' ignore missing %}
	{% if bannerData.icon|trim %}
	  {% include '@atoms/05-icons/svg-' ~ bannerData.icon|lower ~ '.twig' ignore missing %}
	{% endif %}
      </div>
      <h1 class="ma__page-banner__title">{{ label|field_value }}</h1>
    </div>
  </div>
</section>
