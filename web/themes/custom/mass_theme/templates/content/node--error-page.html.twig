{#
/**
 * @file
 * Theme override to display the Full view mode of the Error Page content type.
 */
 #}

{%
set errorPage = {
  'type': content.field_error_code|field_value,
  'label': content.field_error_label|field_value,
  'title': content.field_error_title|field_value,
  'message': content.field_error_message|field_value,
}
%}

{% extends '@templates/error-template.twig' %}

{% block pageContent %}
  {% if content.field_interstitial|render|striptags|trim == 'True' %}
    {#{{ content.field_interstitial }}#}
    <form class="ma__form ma__pilot-transition__form" action="http://www.mass.gov">
      <div class="ma__pilot-transition__checkbox">
        <span class="ma__input-checkbox">
          <input type="checkbox" value="hide-transition-page" id="hide-transition-page">
          <label for="hide-transition-page"><span>Got it, don't show me this page again</span></label>
        </span>
      </div>
    </form>
    <div class="ma__pilot-transition__buttons">
      <button class="ma__button-minor ma__button-minor--small js-interstitial-button-back" type="button">Cancel</button>
      <button class="ma__button ma__button--small js-interstitial-button-continue">Continue</button>
    </div>
    {{ attach_library('mass_theme/interstitial-page') }}
  {% endif %}
  {% if content.field_include_search|render|striptags|trim == 'True' %}
    {% include "@custom_includes/molecules-header-search.html.twig" with { 'searchFormId': "cse-header-search-form" } %}
  {% endif %}
  {% if content.field_helpful_links is not empty %}
    {{ content.field_helpful_links }}
  {% endif %}
{% endblock %}
