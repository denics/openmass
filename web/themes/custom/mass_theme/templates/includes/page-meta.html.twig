{% set urlDomain = pageMetaData.urlDomain %}
{% set urlPath = pageMetaData.urlPath %}
{% set socialMediaLinks = pageMetaData.socialMediaLinks %}
{% set logoSrc = pageMetaData.logoSrc %}
{% set siteName = pageMetaData.siteName %}
{% set siteAltName = pageMetaData.siteAltName %}
{% set siteDescription = pageMetaData.siteDescription %}
{% set siteKeywords = pageMetaData.siteKeywords %}
{% set siteCopyright = pageMetaData.siteCopyright %}
{% set orgName = pageMetaData.orgName %}

{#
  SITE LEVEL DATA:
  WEBSITE
  - add to home (front) page only.
  - about can be added when its content is ready.
  - keywords can be added when its content is ready.
#}
{% if schemaPageType == "Home" %}
    <script type="application/ld+json">
        {
          "@context": "http://schema.org",
          "@type": "WebSite",
          "url": "{{ urlDomain }}",
          "name": "{{ siteName }}",
          "alternateName": "{{ siteAltName }}", {% if siteDescription %}
          "about": "{{ siteDescription }}",{% endif %}
          "copyrightHolder": "{{ siteCopyright }}", {% if siteKeywords %}
          "keywords": "{{ siteKeywords }}",{% endif %}
          "potentialAction": {
             "@type": "SearchAction",
             "target": "{{ urlDomain }}/search?q={search_term_string}",
             "query-input": "required name=search_term_string"}
        }
    </script>
{% endif %}
{#
  SITE LEVEL COMMON DATA:
  ORGANIZATION
  - alternateName can be added later if helpful.
#}
    <script type="application/ld+json">
      {
          "@context": "http://schema.org",
          "@type": "Organization",
          "url": "{{ urlDomain }}",
          {% if logoSrc %}"logo": "{{ urlDomain ~ '/' ~ directory ~ logoSrc }}",{% endif %}
          "name": "{{ orgName }}"{% if socialMediaLinks %},
          "sameAs":
            {{ socialMediaLinks|raw }}
            {% endif %}
      }
    </script>
{#
  SITE LEVEL COMMON DATA:
  PAGE STRUCTURE - they match with the ids assigned to the area elements in the
  <body>.
  - header area
  - footer area
  - main navigation area
#}
    <script type="application/ld+json">
      {
          "@context": "http://schema.org",
          "@type": "WPHeader",
          "@id": "{{ urlDomain ~ urlPath ~ '#header' }}"
      }
    </script>
    <script type="application/ld+json">
      {
          "@context": "http://schema.org",
          "@type": "WPFooter",
          "@id": "{{ urlDomain ~ urlPath ~ '#footer' }}"
      }
    </script>
    <script type="application/ld+json">
        {
          "@context": "http://schema.org",
          "@type": "SiteNavigationElement",
          "@id": "{{ urlDomain ~ urlPath ~ '#block-mainnavigation'}}"
        }
    </script>
