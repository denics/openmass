<section class="ma__action-finder">
  {% if desktop_image is not empty or mobile_image is not empty %}
    <style>
      .ma__action-finder__banner {
        background-image: url('{{ mobile_image }}');
      }
      
      @media (min-width: 801px) {
        .ma__action-finder__banner {
          background-image: url('{{ desktop_image }}');
        }
      }
    </style>
  {% endif %}
  <div class="ma__action-finder__banner"></div>
  <div class="ma__action-finder__container">
    {{ drupal_view('subtopics_all_actions', 'block_1') }}
  </div>
</section>
