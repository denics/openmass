/**
 * @file
 * Theme override for an 'input' #type form element.
 *
 * Available variables:
 * - attributes: A list of HTML attributes for the input element.
 * - children: Optional additional rendered elements.
 *
 * @see template_preprocess_input()
 */
#}
{% set path = '/' ~ base_path ~ directory ~ '/overrides/images/search-white.svg' %}
<input{{ attributes.addClass('ma__button-search').addClass('ma__button-search--ajax').setAttribute('type', 'image').setAttribute('src', path) }} />{{ children }}
